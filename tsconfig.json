{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",                    
    "module": "es2015",
    "noUnusedLocals": true,
    "importHelpers": true,                   
    "allowJs": true,                    
    "removeComments": true,              
    "strict": true,                           
    "esModuleInterop": true                   
   
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
